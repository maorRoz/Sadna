@{
	ViewData["Title"] = "Category Discount Menu";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row top-space">
	<div class="col-lg-12">
		<div id="feedContainer" style="float: right;width:20%"></div>
		<div style="float: left;width:70%">
			<div id="alertContainer">
				@if (Model.Message != null && !ViewBag.valid)
				{
					<div class='error'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}
				
				@if (Model.Message != null && ViewBag.valid)
				{
					<div class='success'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}

			</div>
			<hr />
			<br />
			@using (Html.BeginForm("AddCategoryDiscount", "StoreManagement", new { Model.SystemId, Model.State, store = Model.Name }))
			{
				<input type="submit" class="btn btn-primary" value="Add Category Discount">
			}
			<br />
			@using (Html.BeginForm("RemoveCategoryDiscount", "StoreManagement", new { Model.SystemId, Model.State, store = Model.Name }))
			{
				<input type="submit" class="btn btn-primary" value="Remove Category Discount">
			}
			<br />
		</div>
	</div>
</div>

@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}


