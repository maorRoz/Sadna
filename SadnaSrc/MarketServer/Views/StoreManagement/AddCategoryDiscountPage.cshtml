@{
	ViewData["Title"] = "Handling Category Discount View";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row top-space">
	<div class="col-lg-10">

		<div id="feedContainer" style="float: right;width:20%">
			<br />
		</div>

		<div style="float: left;width:30%">
			<div id="alertContainer">
				@if (Model.Message != null)
				{
					<div class='error'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}
			</div>

			@using (Html.BeginForm("AddCategoryDiscount", "StoreManagement", new { Model.SystemId, Model.State, Model.Message, store = Model.Name }))
			{
			<fieldset>
				<br />
				<select name="categoryName">
					@foreach (var item in Model.Items)
					{
						<option value="@item.Name">@item.Name</option>
					}
				</select>
			</fieldset>
				<label for="start-date">Start Date:</label>
				<input type="text" class="form-control" id="start-date" name="startDate" />
				<label for="end-date">End Date:</label>
				<input type="text" class="form-control" id="end-date" name="endDate" />
				<label for="discount-amount">Discount Amount:</label>
				<input class="form-control" id="discount-amount" name="discountAmount" />
			
				<br />
				<input type="submit" class="btn btn-primary" value="Add">

			}
		</div>
	</div>
</div>

