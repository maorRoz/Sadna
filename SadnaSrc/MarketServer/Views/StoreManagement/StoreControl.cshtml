@{
	ViewData["Title"] = "Store Control page";
}


<div class="row top-space">
	<div class="col-lg-12">
		<div id="feedContainer" style="float: right;width:20%"></div>
		<div style="float: left;width:70%">
			<div id="alertContainer">
				@if (Model.Message != null)
				{
					<div class='error'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}
			</div>
			<h2>Store Control</h2>
			<hr />
			<table class="table">
				<thead>
					<tr>
						<th>Store List</th>
					</tr>
				</thead>
				@foreach (var item in Model.Items)
				{
					<tr>
						<td>@item.Name</td>
						<td>
							<a asp-controller="StoreManagement" asp-action="ManageStoreOptions" asp-route-systemId="@Model.SystemId"
							   asp-route-state="@Model.State" asp-route-store="@item.Name"><img src="\images\cashier.png"></a>
						</td>

					</tr>
				}
			</table>
		</div>
	</div>
</div>

@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}
