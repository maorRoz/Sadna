@{
	ViewData["Title"] = "Open Store";
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row top-space">
	<div class="col-lg-10">

		<div id="feedContainer" style="float: right;width:20%">
			<br />
		</div>

		<div style="float: left;width:30%">
			<div id="alertContainer">
				@if (Model.Message != null)
				{
					<div class='error'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}
			</div>

			@using (Html.BeginForm("OpenStore", "StoreManagement", new { Model.SystemId }))
			{
				<label for="store-name-entry">Store Name:</label>
				<input type="text" class="form-control" id="store-name-entry" name="storeName" />
				<label for="store-address-entry">Address:</label>
				<input type="text" class="form-control" id="store-address-entry" name="storeAddress" />
				<br />
				<input type="submit" class="btn btn-primary" value="Open">

			}
		</div>
	</div>
</div>

@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}


