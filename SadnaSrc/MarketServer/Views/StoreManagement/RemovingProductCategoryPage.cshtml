@{
	ViewData["Title"] = "Removing Product Category Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row top-space">
	<div class="col-lg-10">
		<div id="feedContainer" style="float: right;width:20%">
			<br />
		</div>
		<div style="float: left;width:30%">
			<div id="alertContainer">
				@if (Model.Message != null && !ViewBag.valid)
				{
					<div class='error'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}

				@if (Model.Message != null && ViewBag.valid)
				{
					<div class='success'>
						<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
						@Model.Message
					</div>
				}

			</div>
			@using (Html.BeginForm("RemoveCategoryProduct", "StoreManagement", new { Model.SystemId, Model.State , Model.Store, Model.Product}))
			{
				<label for="category-name">Category Name:</label>
				<input type="text" class="form-control" id="category-name" name="category" />
				<br />
				<input type="submit" id="sign-in-button" class="btn btn-primary" value="Add">

			}

		</div>
	</div>
</div>


@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}
