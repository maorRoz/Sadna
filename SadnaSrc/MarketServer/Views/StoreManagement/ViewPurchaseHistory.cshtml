@{
    ViewData["Title"] = "View Purchase History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>


<div class="row top-space">
    <div class="col-lg-12">
        <div id="feedContainer" style="float: right;width:20%"></div>
        <div style="float: left;width:70%">
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Product </th>
                        <th>Store </th>
                        <th>Sale</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Date</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.User</td>
                        <td>@item.Product</td>
                        <td>@item.Store</td>
                        <td>@item.Sale</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@item.Date</td>
                    </tr>
                }
            </table>
            <hr />
        </div>
    </div>
</div>

@section Scripts{
    <script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}


