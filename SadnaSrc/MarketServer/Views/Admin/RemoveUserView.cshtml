@{
	ViewData["Title"] = "MarketYard Remove User";
}

<h2>@ViewData["Title"]</h2>


<div class="row top-space">
	<div class="col-lg-12">
		<div id="feedContainer" style="float: right;width:20%"></div>
		<div style="float: left;width:70%">
			<div id="alertContainer">
				@if (Model.Message != null && ViewBag.valid)
				{
			<div class='success'>
				<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
				@Model.Message
			</div>
				}

				@if (Model.Message != null && !ViewBag.valid)
				{
			<div class='error'>
				<span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
				@Model.Message
			</div>
				}



			</div>
			<table class="table">
				<thead>
					<tr>
						<th>UserName</th>
					</tr>
				</thead>
				@foreach (var item in Model.Items)
				{
					<tr>
						<td>@item.Name</td>
						<td>

							<a asp-controller="Admin" asp-action="ToRemoveUser" asp-route-systemId="@Model.SystemId"
							   asp-route-state="@Model.State" asp-route-toDeleteName="@item.Name" ><img src="\images\skull.png" /></a> 
							
						</td>
					</tr>
				}
			</table>
			<hr />
		</div>
	</div>
</div>

@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>



}
