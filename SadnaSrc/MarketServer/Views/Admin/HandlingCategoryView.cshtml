@{
	ViewData["Title"] = "Handling Category View";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row top-space">
	<div class="col-lg-12">
		<div id="feedContainer" style="float: right;width:20%"></div>
		<div style="float: left;width:70%">
		    <div id="alertContainer">
		        @if (Model.Message != null && !Model.valid)
                {
		            <div class='error'>
		                <span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
		                @Model.Message
		            </div>
		        }

		        @if (Model.Message != null && Model.valid)
                {
		            <div class='success'>
		                <span class='closebtn' onclick="this.parentElement.style.display = 'none';">&times;</span>
		                @Model.Message
		            </div>
		        }

		    </div>
		    <table class="table">
		        <thead>
		        <tr>
		            <th>Categories</th>
		        </tr>
		        </thead>
		        @foreach (var item in Model.Items)
		        {
		            <tr>
		                <td>@item.Name</td>
		                <td>
		                    <a asp-controller="Admin" asp-action="RemoveCategory" asp-route-systemId="@Model.SystemId"
		                       asp-route-state="@Model.State" asp-route-category="@item.Name"><img src="\images\cancelation.png"></a>

		                </td>
		            </tr>
		        }
		    </table>
		    <br />
		    <tr>
		        <label>Add new Category:</label>
		    </tr>
		    @using (Html.BeginForm("AddCategory", "Admin", new { Model.SystemId, Model.State}))
		    {
		        <th for="category-name">Category Name:</th>
		        <input type="text" class="form-control" id="category-name" name="category" />
		        <br />
		        <input type="submit" id="sign-in-button" class="btn btn-primary" value="Add">

		    }
			<br />
		</div>
	</div>
</div>

@section Scripts{
	<script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
}

